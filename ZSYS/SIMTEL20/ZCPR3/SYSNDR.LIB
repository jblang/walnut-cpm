;  DATE:  24 Feb 84

;
;	SYSNDR.LIB defines the structure of the memory-based named directory.
; It also defines a few elements for it and is suitable for enclosure in
; an NDR file.
;
;	The general structure is:
;
;		DB	Disk,User	; A=1
;		DB	'NDIRNAME'	; 8 chars
;		DB	'PASSWORD'	; 8 chars
;		...			; other entries
;		DB	0		; End of NDR
;
defdu	macro	?disk,?user
	db	?disk-'@'		; Convert Disk
	db	?user			; User is OK
	endm

sysndr	macro
	defdu	'A',0
	db	'BASE    '
	db	'        '

	defdu	'A',15
	db	'ROOT    '
	db	'        '

	defdu	'A',16
	db	'HELP    '
	db	'        '

	defdu	'B',0
	db	'SCRATCH '
	db	'        '

	defdu	'B',1
	db	'ASM     '
	db	'        '

	defdu	'B',2
	db	'C       '
	db	'        '

	defdu	'B',3
	db	'PASCAL  '
	db	'        '

	defdu	'B',4
	db	'SCR     '
	db	'        '

	defdu	'B',5
	db	'BASIC   '
	db	'        '

	defdu	'B',7
	db	'TEXT    '
	db	'        '

	defdu	'B',8
	db	'CAT     '
	db	'        '

	defdu	'B',9
	db	'DATA    '
	db	'        '

	defdu	'C',0
	db	'BACKUP  '
	db	'        '

	db	0		;End of List
	endm

;
;  End of SYSNDR.LIB
;
