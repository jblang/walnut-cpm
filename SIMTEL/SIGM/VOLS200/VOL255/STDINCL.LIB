;
;	STDINCL.LIB	Standard Include Module for Macro-80  by T.Okada
;
	.Z80
;
CR	EQU	0DH	;ASCII CONTROL CHARACTERS
LF	EQU	0AH
BS	EQU	08H
EOF	EQU	1AH
;
BDOS	EQU	5	;CP/M BDOS INTERFACE
B$WBOOT	EQU	0
B$CIN	EQU	1
B$COUT	EQU	2
B$PSTR	EQU	9
B$VERS	EQU	12
B$RSTDSK EQU	13
B$SELDSK EQU	14
B$GETDPB EQU	31
B$RSTDRV EQU	37
B$SETER	EQU	45
B$BIOS	EQU	50
;
@BDOS	MACRO	?FUNC
	LD	C,?FUNC
	CALL	BDOS
	ENDM
;
@STOP	MACRO
	@BDOS	B$WBOOT
	ENDM
;
@MSG	MACRO	?MSG
	LOCAL	?MES
	LD	DE,?MES
	@BDOS	B$PSTR
	DSEG
?MES:	DEFB	?MSG
	DEFB	'$'
	CSEG
	ENDM

