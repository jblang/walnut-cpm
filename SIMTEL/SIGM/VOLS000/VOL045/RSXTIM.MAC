	.TITLE	ITIME
	.SBTTL	RSX11M TIME ROUTINE
;
;ITIME--	RETURN TIME OF DAY
;CALLED BY--
;
;	CALL	ITIME(HOURS,MINUTES,SECONDS)
;
	.MCALL	GTIM$S
	.GLOBL	ITIME
;
ITIME:	SUB	#16.,SP		;CREATE 16 BYTE BUFFER ON STACK.
	MOV	SP,R0		;SAVE ADDRESS IN R0.
	GTIM$S	R0		;GET TIME PARAMETERS.
	MOV	G.TIHR(R0),@2(R5)	;GET HOURS.
	MOV	G.TIMI(R0),@4(R5)	;GET MINUTES.
	MOV	G.TISC(R0),@6(R5)	;GET SECONDS.
	ADD	#16.,SP		;RELEASE BUFFER.
	RTS	PC		;RETURN.
;
	.END
